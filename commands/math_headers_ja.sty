\usepackage{xparse} % for NewDocumentCommand
\usepackage{txfonts} % textsf を正しく表示するため
\usepackage{ifthen}

% 公理 Axiom
\NewDocumentCommand{\Axiom}{D<>{} O{}}{%
  \textgt{%
    \colorbox[rgb]{0.67,1.00,0.85}{\,公理\,}%
    \ifthenelse{\equal{#1}{}}{}{\,\,\,\textsf{{#1}}} % if 第1引数（番号）について
    \ifthenelse{\equal{#2}{}}{}{#2} % if 第2引数（内容）について
  }
}

